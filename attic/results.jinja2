{% extends "layout.jinja2" %}
{% from "macros.jinja2" import user_card %}

{% block content %}
    <div class="row">
        <div class="col-lg-10"><h3>{{ gettext("Searching for: <i>%(who)s</i>", who=who) }}</h3></div>
    </div>

    <h5>Songs</h5>

    <div class="row">
        <div class="col-lg-10">
            {% for sound in results['sounds'] %}
            {% endfor %}
        </div>
    </div>

    <h5 data-mode="{{ results['mode'] }}">Users</h5>

    <div class="row">
        <div class="col-lg-10">
            <div class="card-columns">
                {% for account in results['accounts'] %}
                    {{ user_card(account['username'], account['name'], account['url'], account['instance'], account['summary'], account['follow'], account['remote'], current_user) }}
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
